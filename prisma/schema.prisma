// Configuração de Cashback (por filial)
model CashbackConfig {
  id                    String   @id @default(cuid())
  branchId              String   @unique
  branch                Branch   @relation(fields: [branchId], references: [id])

  // Ativar/Desativar
  enabled               Boolean  @default(false)

  // Regras de GERAÇÃO
  earnPercent           Decimal  @default(3) @db.Decimal(5,2)  // 3% de cashback
  minPurchaseToEarn     Decimal  @default(100) @db.Decimal(10,2) // Mínimo R$100 para gerar
  maxCashbackPerSale    Decimal? @db.Decimal(10,2) // Máximo por venda (null = sem limite)
  expirationDays        Int      @default(90) // Dias para expirar

  // Regras de USO
  minPurchaseMultiplier Decimal  @default(3) @db.Decimal(3,1) // Compra mínima = 3x o cashback usado
  maxUsagePercent       Decimal  @default(50) @db.Decimal(5,2) // Máximo 50% da compra pode ser cashback

  // Regras especiais
  birthdayMultiplier    Decimal  @default(2) @db.Decimal(3,1) // Dobro no aniversário

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

// Saldo de Cashback do Cliente
model CustomerCashback {
  id                    String   @id @default(cuid())
  customerId            String
  customer              Customer @relation(fields: [customerId], references: [id])
  branchId              String
  branch                Branch   @relation(fields: [branchId], references: [id])

  // Saldo atual
  balance               Decimal  @default(0) @db.Decimal(10,2)

  // Totais históricos
  totalEarned           Decimal  @default(0) @db.Decimal(10,2)
  totalUsed             Decimal  @default(0) @db.Decimal(10,2)
  totalExpired          Decimal  @default(0) @db.Decimal(10,2)

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  movements             CashbackMovement[]

  @@unique([customerId, branchId])
  @@index([customerId])
  @@index([branchId])
}

// Movimentações de Cashback
model CashbackMovement {
  id                    String   @id @default(cuid())
  customerCashbackId    String
  customerCashback      CustomerCashback @relation(fields: [customerCashbackId], references: [id])

  type                  CashbackMovementType
  amount                Decimal  @db.Decimal(10,2)

  // Referências
  saleId                String?
  sale                  Sale?    @relation(fields: [saleId], references: [id])

  // Validade (para créditos)
  expiresAt             DateTime?
  expired               Boolean  @default(false)

  description           String?

  createdAt             DateTime @default(now())
  createdByUserId       String?
  createdByUser         User?    @relation("CashbackMovementCreatedBy", fields: [createdByUserId], references: [id])

  @@index([customerCashbackId])
  @@index([saleId])
  @@index([expiresAt])
}

