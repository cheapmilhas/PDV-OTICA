// Meta de Vendas (por filial/mês)
model SalesGoal {
  id                    String       @id @default(cuid())
  branchId              String
  branch                Branch       @relation(fields: [branchId], references: [id])

  // Período
  year                  Int
  month                 Int          // 1-12

  // Meta da loja
  branchGoal            Decimal      @db.Decimal(12,2)

  // Status
  status                GoalStatus   @default(ACTIVE)

  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt

  sellerGoals           SellerGoal[]

  @@unique([branchId, year, month])
  @@index([branchId])
  @@index([year, month])
}

// Meta Individual do Vendedor
model SellerGoal {
  id                    String     @id @default(cuid())
  salesGoalId           String
  salesGoal             SalesGoal  @relation(fields: [salesGoalId], references: [id], onDelete: Cascade)
  userId                String
  user                  User       @relation(fields: [userId], references: [id])

  goalAmount            Decimal    @db.Decimal(12,2)

  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt

  @@unique([salesGoalId, userId])
  @@index([userId])
}

// Configuração de Comissões (por filial)
model CommissionConfig {
  id                      String   @id @default(cuid())
  branchId                String   @unique
  branch                  Branch   @relation(fields: [branchId], references: [id])

  // Comissão base
  baseCommissionPercent   Decimal  @default(5) @db.Decimal(5,2) // 5%

  // Bônus por bater meta
  goalBonusPercent        Decimal  @default(2) @db.Decimal(5,2) // +2%

  // Comissão por categoria (opcional)
  categoryCommissions     Json?    // { "armacoes": 5, "lentes": 4 }

  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

// Registro de Comissão (calculado mensalmente) - NOME ALTERADO PARA EVITAR CONFLITO
model SellerCommission {
  id                    String           @id @default(cuid())
  userId                String
  user                  User             @relation("SellerCommissions", fields: [userId], references: [id])
  branchId              String
  branch                Branch           @relation(fields: [branchId], references: [id])

  // Período
  year                  Int
  month                 Int

  // Valores
  totalSales            Decimal          @db.Decimal(12,2)
  goalAmount            Decimal?         @db.Decimal(12,2)
  goalAchieved          Boolean          @default(false)

  // Comissão
  baseCommission        Decimal          @db.Decimal(10,2)
  bonusCommission       Decimal          @default(0) @db.Decimal(10,2)
  totalCommission       Decimal          @db.Decimal(10,2)

  // Status
  status                CommissionStatus @default(PENDING)
  paidAt                DateTime?

  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt

  @@unique([userId, branchId, year, month])
  @@index([userId])
  @@index([branchId])
  @@index([year, month])
}
