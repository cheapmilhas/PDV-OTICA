// Configuração de Lembretes (por filial)
model ReminderConfig {
  id                              String   @id @default(cuid())
  branchId                        String   @unique
  branch                          Branch   @relation(fields: [branchId], references: [id])

  // Receita vencendo
  prescriptionReminderEnabled     Boolean  @default(true)
  prescriptionReminderDays        Int      @default(30) // Dias antes para alertar
  prescriptionValidityMonths      Int      @default(12) // Validade da receita

  // Clientes inativos
  inactiveReminderEnabled         Boolean  @default(true)
  inactiveAfterDays               Int      @default(180) // 6 meses

  // Aniversário
  birthdayReminderEnabled         Boolean  @default(true)
  birthdayReminderDaysBefore      Int      @default(0) // 0 = no dia, 1 = dia antes

  // Cashback expirando
  cashbackExpiringReminderEnabled Boolean  @default(true)
  cashbackExpiringDaysBefore      Int      @default(7)

  // Tipos habilitados
  enabledReminderTypes            String[] // Ex: { prescriptionReminder, birthday, inactive, cashbackExpiring }

  createdAt                       DateTime @default(now())
  updatedAt                       DateTime @updatedAt
}

// Registro de Contatos com Clientes
model CustomerContact {
  id                    String        @id @default(cuid())
  customerId            String
  customer              Customer      @relation(fields: [customerId], references: [id])
  branchId              String
  branch                Branch        @relation(fields: [branchId], references: [id])

  // Tipo e canal
  type                  ContactType
  channel               ContactChannel @default(WHATSAPP)

  // Status
  status                ContactStatus  @default(PENDING)

  // Referência (ex: lembrete que gerou este contato)
  reminderId            String?
  reminder              Reminder?      @relation(fields: [reminderId], references: [id])

  // Conteúdo
  message               String?        @db.Text
  notes                 String?        // Observações do atendente

  // Quem executou
  executedByUserId      String?
  executedByUser        User?          @relation("ContactExecutedBy", fields: [executedByUserId], references: [id])
  executedAt            DateTime?

  createdAt             DateTime       @default(now())

  @@index([customerId])
  @@index([branchId])
  @@index([type])
  @@index([status])
  @@index([createdAt])
}

// Lembretes Gerados (fila de lembretes)
model Reminder {
  id                    String         @id @default(cuid())
  branchId              String
  branch                Branch         @relation(fields: [branchId], references: [id])
  customerId            String
  customer              Customer       @relation(fields: [customerId], references: [id])

  // Tipo
  type                  ContactType

  // Status
  status                ReminderStatus @default(PENDING)

  // Agendamento
  scheduledFor          DateTime       // Data para aparecer no dashboard

  // Dados extras (JSON) - ex: valor do cashback, data da receita, etc
  metadata              Json?

  // Ações
  dismissedAt           DateTime?
  dismissedByUserId     String?
  dismissedByUser       User?          @relation("ReminderDismissedBy", fields: [dismissedByUserId], references: [id])
  dismissReason         String?

  // Contatos gerados
  contacts              CustomerContact[]

  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  @@index([branchId])
  @@index([customerId])
  @@index([type])
  @@index([status])
  @@index([scheduledFor])
}

